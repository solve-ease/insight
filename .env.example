# Environment Configuration for Photo & Video Search

# Qdrant Database Settings
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Image Settings
IMAGE_COLLECTION_NAME=image_embeddings
IMAGE_FOLDER_PATH=./images

# Video Settings
VIDEO_COLLECTION_NAME=video_embeddings
VIDEO_FOLDER_PATH=./videos

# Video Processing Configuration
VIDEO_SAMPLE_RATE=10        # Frames per second to sample from videos (5-15 recommended)
VIDEO_BATCH_SIZE=4          # Number of frames to process at once (2-8 for 4GB GPU, adjust based on memory)
MIN_CLUSTER_SIZE=5          # Minimum frames to form a cluster in HDBSCAN
MIN_SAMPLES=3               # HDBSCAN min_samples parameter

# Model Settings
VECTOR_DIMENSIONS=768       # CLIP embedding dimension (don't change unless using different model)
MODEL_NAME=openai/clip-vit-large-patch14

# Performance Settings
BATCH_SIZE=64               # Batch size for image processing (adjust based on GPU memory)
